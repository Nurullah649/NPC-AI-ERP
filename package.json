{
  "name": "NPC-AI-ERP",
  "version": "1.3.0",
  "description": "NPC-AI ERP Electron Uygulaması",
  "main": "main.js",
  "homepage": "./",
  "author": "Nurullah Kurnaz",
  "license": "ISC",
  "scripts": {
    "postinstall": "cd medical-chemical-sales && npm install --legacy-peer-deps",
    "start": "electron .",
    "dev": "concurrently \"npm:start-next\" \"npm:start-electron\"",
    "start-electron": "electron .",
    "start-next": "cd medical-chemical-sales && npm run dev",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.npc-ai-erp.app",
    "productName": "NPC-AI ERP",
    "copyright": "Copyright © 2024 NPC-AI",
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      {
        "from": "medical-chemical-sales/out",
        "to": "out"
      }
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "bin",
        "to": "bin"
      }
    ]
  }
}