{
  "name": "NPC-AI-ERP",
  "version": "1.0.0",
  "description": "NPC-AI ERP Electron Uygulaması",
  "main": "main.js",
  "homepage": "./",
  "author": "Adınız veya Şirketiniz",
  "license": "ISC",
  "scripts": {
    "postinstall": "cd medical-chemical-sales && npm install --legacy-peer-deps",
    "start": "electron .",
    "dev": "concurrently \"npm:start-next\" \"npm:start-electron\"",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "start-next": "cd medical-chemical-sales && npm run dev",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.npc-ai-erp.app",
    "productName": "NPC-AI ERP",
    "copyright": "Copyright © 2025 Şirketiniz",
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "medical-chemical-sales/out/**/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}

